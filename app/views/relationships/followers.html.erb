<h1>Follower Users</h1>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr><% if users.exists? %>
        <% @users.each do |user| %>
        <td><%= image_tag @user.get_profile_image, size: '50x50' %></td>
        <td><%= @user.name %></td>
        <td>フォロー数：<%= @user.followings.count %></td>
        <td>フォロワー数：<%= @user.followers.count %></td>
        <td><%= link_to 'Show',user_path(@user) %></td>
        <% else %>
        <p>ユーザーはいません</p>
        <% end %>
      </tr>
  </tbody>
</table>
