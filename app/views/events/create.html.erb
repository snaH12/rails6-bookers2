
<h2>Event Mail</h2>
<%= form_with model:@event,local:true do |f| %>
<%= render 'layouts/errors', obj: @event %>
  <div class="form-event">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control event_title' %>
  </div>
  <div class="form-event">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control event_content' %>
  </div>
  <div class="form-event">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>